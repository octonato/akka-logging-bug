<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{"HH:mm:ss.SSS"} %logger [%mdc] - %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="akka" level="INFO" />
  <logger name="com.example" level="INFO" />
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>